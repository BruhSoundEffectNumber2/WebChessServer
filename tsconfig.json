{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "target": "es2015",
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowUnreachableCode": false,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "strict": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}